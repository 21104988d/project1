{
  "name": "the-project",
  "version": "1.0.0",
  "type": "module",
  "description": "Cross-chain DApp router for seamless asset exchanges",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev -w api\" \"npm run dev -w frontend\"",
    "build": "npm run build -ws",
    "test": "npm run test -ws",
    "test:unit": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint packages/*/src/**/*.{ts,tsx}",
    "lint:fix": "eslint packages/*/src/**/*.{ts,tsx} --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "quality:check": "npm run lint && npm run format:check && npm run typecheck && npm run spell:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "spell:check": "cspell \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "spell:check:staged": "cspell --no-summary --no-progress",
    "docs:build": "typedoc",
    "docs:contracts": "nx run contracts:docs",
    "docs:all": "npm run docs:build && npm run docs:contracts",
    "docs:serve": "typedoc --watch",
    "docs:clean": "rimraf docs/api-docs",
    "contracts:compile": "npm run build --workspace=@theproject/contracts",
    "contracts:test": "npm run test --workspace=@theproject/contracts",
    "contracts:deploy": "npm run deploy --workspace=@theproject/contracts",
    "contracts:verify": "npm run verify --workspace=@theproject/contracts",
    "deploy:testnet": "npx ts-node scripts/configure-testnet-deployment.ts",
    "deploy:testnet:goerli": "npx hardhat run scripts/deploy/deploy-goerli.ts --network goerli",
    "deploy:testnet:sepolia": "npx hardhat run scripts/deploy/deploy-sepolia.ts --network sepolia",
    "deploy:testnet:arbitrum": "npx hardhat run scripts/deploy/deploy-arbitrumGoerli.ts --network arbitrumGoerli",
    "verify:contracts": "npx ts-node scripts/verify-contracts.ts",
    "setup:cross-chain": "npx ts-node scripts/setup-cross-chain.ts",
    "api:dev": "npm run dev --workspace=@theproject/api",
    "api:build": "npm run build --workspace=@theproject/api",
    "frontend:dev": "npm run dev -w frontend",
    "frontend:build": "npm run build -w frontend",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rimraf node_modules package-lock.json packages/*/node_modules packages/*/dist && npm install",
    "review:setup": "./scripts/setup-review.sh",
    "review:start": "concurrently \"npm run api:dev\" \"npm run frontend:dev\" \"npm run review:open\"",
    "review:open": "sleep 5 && npx open-cli http://localhost:3000",
    "review:build": "npm run build && npm run review:serve",
    "review:serve": "npm run frontend:preview",
    "review:demo": "VITE_DEMO_MODE=true npm run frontend:dev",
    "review:clean": "npm run clean && npm run review:setup",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@jest/globals": "^30.0.4",
    "@playwright/test": "^1.53.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^8.2.2",
    "cspell": "^8.19.4",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-sonarjs": "^0.25.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "open-cli": "^8.0.0",
    "playwright": "^1.53.2",
    "prettier": "^3.0.2",
    "prettier-plugin-solidity": "^2.0.0",
    "rimraf": "^5.0.10",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.1.6",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theproject/the-project.git"
  },
  "keywords": [
    "defi",
    "cross-chain",
    "dapp",
    "routing",
    "aggregator",
    "web3",
    "ethereum",
    "solana",
    "blockchain"
  ],
  "author": "The Project Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theproject/the-project/issues"
  },
  "homepage": "https://theproject.xyz"
}
