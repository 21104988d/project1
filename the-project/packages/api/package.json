{
  "name": "@theproject/api",
  "version": "1.0.0",
  "description": "Backend API services",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "dotenv -e .env -- tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:security": "eslint src/**/*.ts --config .eslintrc.security.js",
    "clean": "rimraf dist",
    "security:audit": "npm audit --audit-level high",
    "security:snyk": "snyk test",
    "security:check": "npm run security:audit && npm run security:snyk && npm run lint:security",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d data-source.ts",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d data-source.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@theproject/shared": "1.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "@types/redis": "^4.0.11",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "fastify": "^4.24.3",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "prisma": "^5.6.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.5",
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.8.0",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.4",
    "@types/ws": "^8.5.8",
    "dotenv-cli": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "snyk": "^1.1297.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typeorm": "^0.3.25",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
